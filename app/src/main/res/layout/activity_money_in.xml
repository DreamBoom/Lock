<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/backarrow"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="押金"
            android:textColor="@color/white"
            android:textSize="@dimen/big_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="14dp"
                android:text="充值金额"
                android:textColor="@color/black"
                android:textSize="@dimen/info_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/r100"
                    android:background="@drawable/bg_bk"
                    android:layout_margin="14dp"
                    android:padding="14dp"
                    android:text="100元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/r200"
                    android:background="@drawable/bg_bk"
                    android:layout_marginTop="14dp"
                    android:padding="14dp"
                    android:text="200元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/r500"
                    android:background="@drawable/bg_bk"
                    android:layout_margin="14dp"
                    android:padding="14dp"
                    android:text="500元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/r1000"
                    android:background="@drawable/bg_bk"
                    android:layout_marginStart="14dp"
                    android:padding="14dp"
                    android:text="1000元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/r2000"
                    android:background="@drawable/bg_bk"
                    android:layout_marginStart="14dp"
                    android:padding="14dp"
                    android:text="2000元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/r5000"
                    android:background="@drawable/bg_bk"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:padding="14dp"
                    android:text="5000元"
                    android:gravity="center"
                    android:textSize="@dimen/info_size"
                    android:textColor="@color/blue"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:padding="14dp"
                android:background="@color/white"
                android:text="需要充值的金额"
                android:textColor="@color/black"
                android:textSize="@dimen/info_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_money"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="15dp"
                    android:hint="请输入您想要充值的金额"
                    android:textSize="@dimen/info_size"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/bg_bk_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:text="选择充值方式"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="@dimen/info_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/ll_zfb"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="支付宝"
                    android:paddingStart="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_zfb"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wx"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/weixinzhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="微信"
                    android:paddingStart="15dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_wx"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="充值金额"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textSize="@dimen/info_size"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/in_money"
                android:text="¥ 0元"
                android:padding="14dp"
                android:textColor="@color/red"
                android:textSize="@dimen/info_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/im_agree"
                    android:padding="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ico_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="您已同意"
                    android:paddingTop="14dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_agree"
                    android:text="《好锁相关协议》"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/info_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/in_sure"
                    android:gravity="center"
                    android:text="立即充值"
                    android:layout_margin="14dp"
                    android:background="@drawable/btn_bg"
                    android:padding="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/info_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
