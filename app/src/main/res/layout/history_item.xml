<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/rl_header"
        android:background="@drawable/bg_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/order_status"
            android:text="正在开锁"
            android:layout_alignParentStart="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/info_size"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_info"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/text_yy"
            android:textSize="@dimen/info_size"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/line"
            android:layout_below="@+id/order_status"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:id="@+id/time"
            android:text="时间:"
            android:layout_below="@+id/line"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:textSize="@dimen/small_size"
            android:textColor="@color/text_yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_time"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/time"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:textSize="@dimen/small_size"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/point"
            android:text="地址:"
            android:layout_below="@+id/time"
            android:paddingBottom="10dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="@dimen/small_size"
            android:textColor="@color/text_yy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_point"
            android:layout_below="@+id/time"
            android:layout_toEndOf="@+id/point"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:paddingEnd="15dp"
            android:textSize="@dimen/small_size"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/order_get"
            android:background="@color/blue"
            android:text="催款"
            android:paddingStart="45dp"
            android:paddingEnd="45dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_below="@+id/order_point"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="@dimen/info_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>