<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hide">

    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:background="@drawable/bg_pop">

        <ImageView
            android:id="@+id/im_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="14dp"
            android:background="@drawable/ico_close_blue" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="14dp"
            android:paddingTop="14dp"
            android:paddingBottom="15dp"
            android:text="请选择添加账户的种类"
            android:textColor="@color/black"
            android:textSize="@dimen/info_size" />


        <LinearLayout
            android:id="@+id/t1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:gravity="center"
            android:paddingStart="14dp">
            <LinearLayout
                android:id="@+id/ll_zfb"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="支付宝"
                    android:paddingStart="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_zfb"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_wx"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@drawable/weixinzhifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="微信"
                    android:paddingStart="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/info_size"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/im_wx"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ico_yuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/et_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_marginTop="14dp"
            android:background="@null"
            android:cursorVisible="true"
            android:gravity="center|start"
            android:hint="请输入账号"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="14dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/small_size" />

        <TextView
            android:id="@+id/bt_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_account"
            android:layout_margin="14dp"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定添加"
            android:textColor="@color/white"
            android:textSize="@dimen/info_size" />
    </RelativeLayout>
</RelativeLayout>
