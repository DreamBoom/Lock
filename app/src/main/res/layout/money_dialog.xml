<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hide">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:background="@drawable/bg_pop">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="@dimen/big_size" />
        <ImageView
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="请检查输入的转出金额，无误请点击确认"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/info_size" />
        <TextView
            android:id="@+id/out_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="转出金额:0.0元"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/info_size" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/bg_bk"
                android:gravity="center"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/blue"
                android:textSize="@dimen/info_size" />
            <TextView
                android:id="@+id/sure"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:padding="10dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/info_size" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
